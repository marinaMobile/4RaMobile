<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="#010105">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lot_an"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_url="https://assets1.lottiefiles.com/packages/lf20_lz5rbiit.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lot_an"
        android:layout_marginTop="20dp"
        app:shimmer_base_color="#EDD923"
        app:shimmer_repeat_delay="500">

        <TextView
            android:id="@+id/title_spl"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/tilliumbolditalic"
            android:gravity="center"
            android:text="4RAMOBILE"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/txtMainMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="696dp"
        android:layout_marginEnd="289dp"
        android:layout_marginBottom="16dp"
        android:text="@string/app_name"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>